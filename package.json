{
    "name": "terrarium-theme",
    "displayName": "Terrarium Theme",
    "description": "A minimal theme with light and dark variants that focuses on readability, clear error/alert highlighting, and drawing attention to important elements in code and terminal output. Syncs automatically from kelevra repository. Final sync test with added package script.",
    "version": "0.3.2",
    "publisher": "appliedsciencegroup",
    "author": {
        "name": "Applied Science Group"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/appliedsciencegroup/terrarium-theme.git"
    },
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Themes"
    ],
    "contributes": {
        "themes": [
            {
                "label": "Terrarium (Dark)",
                "uiTheme": "vs-dark",
                "path": "./themes/terrarium-dark.json"
            },
            {
                "label": "Terrarium (Light)",
                "uiTheme": "vs",
                "path": "./themes/terrarium-light.json"
            }
        ]
    },
    "galleryBanner": {
        "color": "#242424",
        "theme": "dark"
    },
    "keywords": [
        "theme",
        "dark theme",
        "light theme",
        "terrarium",
        "minimal",
        "readable",
        "accessible",
        "greyscale",
        "gold",
        "green",
        "distraction-free"
    ],
    "icon": "icon.png",
    "license": "MIT",
    "scripts": {
        "package": "vsce package"
    },
    "dependencies": {
        "archiver": "^7.0.1"
    }
}
